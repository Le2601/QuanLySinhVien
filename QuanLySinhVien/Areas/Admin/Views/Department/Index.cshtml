@model IEnumerable<QuanLySinhVien.Models.department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Course" class="nav-link">Khoa</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý khoa</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Khoa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách khoa</h3>

            <div class="card-tools">
                <a href="/admin/Department/Create" class="btn btn-danger">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">

           <table class="table">
    <thead>
        <tr>
            <th>
               Tiêu đề
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model != null)
        {
            foreach (var item in Model) {
        <tr id="trow_@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
               <a class="btn btn-danger" href="/admin/Department/Edit/@item.Id">Edit</a>
               <a class="btn btn-outline-primary btnDelete" data-id="@item.Id" href="#">Delete</a>
            </td>
                </tr>
            }
        }
        else
        {
             <tr>
                            <td>Chưa có bảng ghi</td>


                        </tr>
        }

    </tbody>
</table>

           

        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>






<!-- /.content -->

@section scripts{

    <script>
        $(document).ready(function(){
            $('body').on('click','.btnDelete',function(){
                var id = $(this).data('id');

                var conf = confirm("ban muoon xoa chua");

                if(conf == true){

                    $.ajax({

                        url: '/admin/Department/delete',
                        type: 'post',
                        data: {id:id},
                        success: function(rs){
                            if(rs.success){
                                $('trow_'+id).remove();
                                location.reload();
                            }
                        }

                    });

                }
            });
        });
    </script>
  

}




