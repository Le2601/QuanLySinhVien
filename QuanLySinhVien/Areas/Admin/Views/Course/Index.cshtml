@model IEnumerable<QuanLySinhVien.Models.Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Course" class="nav-link">Khóa học</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Khóa học</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a href="/admin/Course/Create" class="btn btn-danger">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>

                        <th>Người tạo</th>

                        <th>Title</th>

                        <th>Khoa</th>
                        <th>Học kỳ</th>

                        <th>Thêm tài liệu</th>
                            
                        <th>Ngày tạo</th>
                      
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)

                        {
                            var tong = i++;
                            <tr id="trow_@item.Id">
                                <td>@tong</td>

                                <td>@item.Account.FullName</td>
                              
                                <td>@item.Title</td>

                                <td>@item.department.Title</td>
                                 <td>@item.SemesterCourse.Title</td>

                                <td><a class="btn btn-danger" href="/admin/Course/UploadsFile/@item.Id">Uploads</a></td>

                                <td>@item.DateStart</td>
                              
                                <td>
                                    <a class="btn btn-danger" href="/admin/Course/Update/@item.Id">Edit</a>
                                    <a class="btn btn-outline-primary btnDelete" data-id="@item.Id" href="#">Delete</a>
                                </td>
                            </tr>
                        }
                    }

                    


                    else
                    {
                        <tr>
                            <td>Chưa có bảng ghi</td>


                        </tr>
                    }
                </tbody>


            </table>
           

        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

