@section scripts{

    <script>
        $(document).ready(function(){
            $('body').on('click','.btnDelete',function(){
                var id = $(this).data('id');

                var conf = confirm("ban muoon xoa chua");

                if(conf == true){

                    $.ajax({

                        url: '/admin/Course/delete',
                        type: 'post',
                        data: {id:id},
                        success: function(rs){
                            if(rs.success){
                                $('trow_'+id).remove();
                                location.reload();
                            }
                        }

                    });

                }


            });
        });
    </script>
  

}



