@using PagedList.Core.Mvc
@using System.Globalization;
@model PagedList.Core.IPagedList<QuanLySinhVien.Models.Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLecturers.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Danh sách khóa học</a></li>

    </ol>
</nav>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
<table class="table">
     <thead>
      <tr>
        <th>Xem thành viên</th>
        <th>Nội dung khóa học</th>
        <th>Khóa học</th>
        <th>Học kỳ</th>
        <th>Password</th>
        <th>Ngày bắt đầu</th>
        <th>Ngày kết thúc</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
@if(Model != null){
            foreach (var item in Model) {
        <tr id="trow_@item.Id">
                        <td><a href="/CourseMemberLecturers/@item.Alias-@item.Id" class="btn btn-outline-primary">Show</a></td>
                        <td><a href="/CourseContentLecturers/@item.Alias-@item.Id" class="btn btn-outline-success">Thêm</a></td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.SemesterCourse.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
         
           
            <td>
                 <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                 <a class="btn btn-outline-danger btnDelete" data-id="@item.Id" href="#">Delete</a>
            </td>
                </tr>
            }  
        }
        else
        {
            <tr>
                <td>Rỗng</td>
            </tr>
        }



    </tbody>
</table>
    @*  note *@
    <div aria-label="Page navigation example">
        <ul class="pagination">
            <pager class="pager-container" list="@Model" asp-controller="CourseLecturers" asp-action="Index" />
        </ul>
    </div>
    @*  note *@
</div>


@section Scripts{

   <script>
        $(document).ready(function(){
            $('body').on('click','.btnDelete',function(){
                var id = $(this).data('id');

                var conf = confirm("ban muoon xoa chua");

                if(conf == true){

                    $.ajax({

                        url: '/CourseLecturers/delete',
                        type: 'post',
                        data: {id:id},
                        success: function(rs){
                            if (rs.success) {

                                $('trow_' + id).remove();

                                location.reload();

                            }
                            else {
                                alert(rs.msg);
                            }
                        }

                    });

                }
            });
        });
    </script>
  

}



