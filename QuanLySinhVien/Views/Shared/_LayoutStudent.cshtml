<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLySinhVien</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    @* bootsstrap 4*@
    <link href="~/user/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .chat-box {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #007bff;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 9999;
        }

            .chat-box:hover {
                background-color: #0056b3;
            }

            .chat-box .chat-icon {
                font-size: 24px;
            }

            .chat-box .chat-badge {
                position: absolute;
                top: -5px;
                right: -5px;
                width: 20px;
                height: 20px;
                border-radius: 50%;
                background-color: red;
                color: #fff;
                font-size: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .chat-window {
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 300px;
            height: 400px;
            border-radius: 10px;
            background-color: #f8f9fa;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            display: none;
            z-index: 9998;
        }

            .chat-window .chat-header {
                background-color: #007bff;
                padding: 10px;
                color: #fff;
            }

            .chat-window .chat-body {
                padding: 10px;
                max-height: 300px;
                overflow-y: auto;
            }

            .chat-window .message {
                margin-bottom: 10px;
            }

                .chat-window .message .sender {
                    font-weight: bold;
                }

                .chat-window .message .message-content {
                    margin-top: 5px;
                }

            .chat-window .new-message {
                padding: 10px;
                background-color: #f8f9fa;
            }
    </style>

</head>


<body>
   
    <header>

        @await Component.InvokeAsync("MenuTopStudents")


    </header>

   @*  boxchat *@
    <div class="container mt-5">
        <div class="chat-box" onclick="toggleChatWindow()">
            <i class="chat-icon fas fa-comment"></i>
            <div class="chat-badge">3</div>
        </div>
        <div class="chat-window" id="chatWindow">
            <div class="chat-header">
                Chat Box
            </div>
            <div class="chat-body">
                <div class="message">
                    <div class="sender">Lễ:</div>
                    <div class="message-content">Xin chào!</div>
                </div>
                <div class="message">
                    <div class="sender">Lễ:</div>
                    <div class="message-content">Bạn muốn tôi giúp điều gì?</div>
                </div>
            
            </div>
            <div class="new-message">
                <input type="text" class="form-control" placeholder="Nhập tin nhắn">
            </div>
        </div>
    </div>
    @*  end boxchat *@
    <div class="">
        <main role="main" class="pb-3" style="min-height:1100px">

            @await Component.InvokeAsync("MenuStudents")
            
           
            <div class="container" style="max-width: 1400px;">
                @RenderBody()
            </div>
            

           





        </main>

       
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">


            <div class="footer-copyright text-center py-3">
                © 2023 Copyright: Le26
               
            </div>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* bootsstrap 4*@
    <script src="~/user/js/bootstrap.min.js"></script>
    <script src="~/user/js/jquery-3.2.1.slim.min.js"></script>
    <script src="~/user/js/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        function toggleChatWindow() {
            var chatWindow = document.getElementById("chatWindow");
            chatWindow.style.display = chatWindow.style.display === "none" ? "block" : "none";
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
