@model QuanLySinhVien.ModelView.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLoginUser.cshtml";
}


<style>
    #login .container #login-row #login-column #login-box {
        margin-top: 20px;
        max-width: 600px;
        height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }
</style>
<div class="container login-container">
    <div class="col">
        <h1 class="text-center my-auto"><a href="~/" style="text-decoration: none;color:#17a2b8">Hệ thống học tập trực tuyến</a></h1>
    </div>
    <div id="login">

        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="login-student.html" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <h3 class="text-center text-info">Đăng nhập Sinh Viên</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Email:</label><br>
                                <input type="text" asp-for="Email" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" asp-for="Password" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                
                                <label for="remember-me"  class="text-info">@ViewBag.Error</label><br>
                               
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>
                            <div id="register-link" class="text-right">
                                <a  href="~/" class="text-info">Quay về trang chủ</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


